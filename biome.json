{
	"$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
	"files": {
		"includes": [
			"**",
			"!**/node_modules",
			"!**/dist",
			"!**/.next",
			"!**/.vercel",
			"!**/playwright-report",
			"!**/test-results",
			"!**/.playwright-mcp"
		]
	},
	"css": {
		"linter": {
			"enabled": true
		},
		"parser": {
			"cssModules": true
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useMediaCaption": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "warn",
				"noUnknownAtRules": "off"
			},
			"performance": {
				"noImgElement": "warn"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	}
}
