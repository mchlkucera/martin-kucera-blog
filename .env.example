# Notion API
NOTION_TOKEN=secret_xxxxxxxxxxxxxxxxxxxxx
NOTION_DATABASE_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Cloudflare R2 Storage
# Get these from Cloudflare Dashboard > R2 > Manage R2 API Tokens
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key_id
R2_SECRET_ACCESS_KEY=your_secret_access_key
R2_BUCKET_NAME=your_bucket_name

# Public URL for R2 storage (r2.dev subdomain or custom domain)
# Format: https://pub-xxxxxxxxxx.r2.dev
NEXT_PUBLIC_R2_PUBLIC_URL=https://pub-xxxxxxxxxx.r2.dev

# ElevenLabs API for TTS audio generation
# Get from: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=xi_xxxxxxxxxxxxxxxxxxxxx

# Optional: Custom ElevenLabs voice ID (default: Rachel - 21m00Tcm4TlvDq8ikWAM)
# Browse voices: https://elevenlabs.io/app/voice-library
# ELEVENLABS_VOICE_ID=your_voice_id_here

# Secret for protecting API endpoints (cron jobs)
# Generate a random string: openssl rand -hex 32
CRON_SECRET=your_random_secret_here

# Optional: Site URL for internal API calls
# NEXT_PUBLIC_SITE_URL=https://your-site.vercel.app

# Umami Analytics (Privacy-focused, GDPR compliant)
# Sign up at: https://cloud.umami.is/signup (free tier: 100k events/month)
# 1. Create account at Umami Cloud
# 2. Add your website in the dashboard
# 3. Copy the Website ID from Settings > Tracking Code
NEXT_PUBLIC_UMAMI_WEBSITE_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Optional: Custom Umami script URL (for self-hosted instances)
# Default: https://cloud.umami.is/script.js
# NEXT_PUBLIC_UMAMI_SCRIPT_URL=https://your-umami-instance.vercel.app/script.js
